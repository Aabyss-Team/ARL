    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "app.celerytask.celery",
                "worker",
                "-l",
                "debug",
                "-Q",
                "arltask",
                "-c",
                "1",
                "-f",
                "arl_worker_debug.log"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
        }
    ]
}